<% if (!gmAttractions.status) { %>
    <%- include('error', {service: gmAttractions.service, error: gmAttractions.data}) %>
<% } else { %>
    <h2 class="text-2xl mb-5">Google Maps Attractions</h2>
    <table class="table-auto mb-10 w-full rounded-lg overflow-hidden shadow-lg">
        <thead class="bg-pink-500 text-white">
            <tr>
                <th class="px-4 py-2">Name</th>
                <th class="px-4 py-2 hidden sm:table-cell">Address</th>
                <th class="px-4 py-2">Review count</th>
                <th class="px-4 py-2">Opening Hours</th>
            </tr>
        </thead>
        <tbody>
            <% gmAttractions.data.forEach(attraction => { %>
                <tr>
                    <td class="border px-4 py-2">
                        <a href="https://www.google.com/maps/search/?api=1&query=<%= encodeURIComponent(attraction.formatted_address) %>">
                            <%= attraction.name %>
                        </a>
                    </td>
                    <td class="border px-4 py-2 hidden sm:table-cell"><%= attraction.formatted_address %></td>
                    <td class="border px-4 py-2"><%= attraction.user_ratings_total %></td>
                    <td class="border px-4 py-2"><%= attraction.summarisedOpeningHours.join("<br>") || 'N/A' %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } %>
