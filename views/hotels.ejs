<h2 class="text-2xl mb-5">Hotels</h2>

<% if(hotels.data.length > 0) { %>
    <table class="table-auto mb-10 w-full rounded-lg overflow-hidden shadow-lg">
        <thead class="bg-gray-500 text-white">
            <tr>
                <th class="px-4 py-2">Name</th>
                <th class="px-4 py-2">Rating</th>
                <th class="px-4 py-2">Address</th>
                <th class="px-4 py-2">Cost</th>
            </tr>
        </thead>
        <tbody>
            <% hotels.data.forEach(hotel => { %>
                <tr>
                    <td class="border px-4 py-2"><a href="<%= hotel.booking_url %>" class="text-pink-500 hover:text-pink-700 underline"><%= hotel.name %></a></td>
                    <td class="border px-4 py-2"><%= hotel.rating %></td>
                    <td class="border px-4 py-2"><%= hotel.address %></td>
                    <td class="border px-4 py-2"><%= hotel.cost %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<% } else { %>
    <p class="text-center">No hotels found.</p>
<% } %>
